@model Model
@{
    ViewData["Title"] = (Model.ModelId == 0 ? "Dodaj" : "Uredi") + " model";
    var listProizvodjac = Context.GetEntitySelectList<Proizvodjac>("ProizvodjacId", "Naziv");
}

<h2>@ViewData["Title"]</h2>


<form action="/Admin/Model/Snimi" method="post">
    @Html.HiddenFor(x => x.ModelId)
    <table>
        <tbody>
            <tr>
                <td>Naziv:</td>
                <td>@Html.TextBoxFor(x => x.Naziv, new { @class = "form-control" })</td>
                <td>@Html.ValidationMessageFor(x => x.Naziv)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x=>x.Proizvodjac)</td>
                <td>@(Html.DropDownListFor(x=>x.ProizvodjacId, listProizvodjac, "Odaberite"))</td>
                <td>@Html.ValidationMessageFor(x => x.ProizvodjacId)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x=>x.SpolBicikl)</td>
                <td>@Html.DropDownListFor(x=>x.SpolBicikl, DropdownHelper.GetEnumSelectList<SpolBicikl>(), "Odaberite")</td>
                <td>@Html.ValidationMessageFor(x => x.SpolBicikl)</td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Snimi</button>
</form>
