
@model List<Boja>
@{
    ViewData["Title"] = "Prikaz boja";
}

<h2>@ViewData["Title"]</h2>

<form class="navbar-form navbar-left">
    <div class="input-group">
        <input type="text" class="form-control" name="Pretraga" placeholder="Naziv..">
        <span class="input-group-btn">
            <button class="btn search-button" type="submit"><span class="icon glyphicon glyphicon-search"></span></button>
        </span>
    </div>
</form>

<table class="table table-light">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {

            <tr>
                <td colspan="3">Nije pronađeno</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Naziv</td>

                <td>
                    <a href="/Admin/Boja/Obrisi?Id=@item.BojaId" class="btn btn-danger">Obriši</a> |
                    <a href="/Admin/Boja/Uredi?Id=@item.BojaId" class="btn btn-warning">Uredi</a>
                </td>
            </tr>

        }
    </tbody>
</table>

<a href="/Admin/Boja/Dodaj" class="btn btn-primary">Dodaj</a>


