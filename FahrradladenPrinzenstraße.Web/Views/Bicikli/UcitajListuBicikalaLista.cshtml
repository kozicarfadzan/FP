@model FahrradladenPrinzenstraße.Web.ViewModels.PrikaziBiciklVM

@if (Model.Bicikla.Count == 0)
{
    <div>Nije pronađeno</div>
}
@foreach (var item in Model.Bicikla)
{

    <div class="row product-item">
        <div class="col-md-4 col-sm-4">
            <a href="index.php?page=detail">
                @if (item.Slika == null || item.Slika.Length < 1000)
                {

                    <img src="/images/default_FP.png" width="262" height="202" alt="Product" class="center-block img-responsive">
                }
                else
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(item.Slika)" class="center-block img-responsive" />
                }
            </a>
        </div>
        <div class="col-md-8 col-sm-8 text-md-center">
            <div class="product-detail">
                <h3 class="media-heading product-name"><a href="index.php?page=detail">@item.Model.Naziv</a></h3>
                <p class="product-price">
                    @if (item.Stanje == Stanje.Novo || item.Stanje == Stanje.Polovno)
                    {
                        <span class="price">
                            @item.Cijena?.ToString("0.00") KM
                        </span>
                    }
                    else
                    {
                        <span class="price">
                            @item.CijenaPoDanu?.ToString("0.00") KM po danu
                        </span>

                    }
                </p>
                <p class="product-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            </div><!-- /.product-detail -->
            <div class="product-actions">
                <div class="btn-group">
                    <a href="index.php?page=cart" class="btn btn-secondary strong uppercase btn-add-to-cart"><img src="assets/images/icon-cart.png" alt="" class="icon-btn" /> Add to cart</a>
                    <a href="index.php?page=cart" class="btn btn-inverse strong uppercase btn-wishlist"><span data-icon="&#xe030;"></span></a>
                </div>

            </div><!-- /.product-actions -->
        </div><!-- /.col -->
    </div><!-- /.product-item -->
                      
}