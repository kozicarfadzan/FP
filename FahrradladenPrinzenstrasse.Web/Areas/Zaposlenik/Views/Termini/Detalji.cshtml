        </div>

        <div class="col-md-4">
            @Html.LabelFor(model => model.Tip, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-6 top-padding-7">
                @Model.Tip
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8">
            @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-3 col-md-3-narrow" })
            <div class="col-md-9 top-padding-7">
                @Model.Opis
            </div>
        </div>
    </div>
</div>


