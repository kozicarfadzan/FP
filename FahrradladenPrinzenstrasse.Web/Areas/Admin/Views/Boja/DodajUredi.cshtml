@model Boja
@{
    ViewData["Title"] = (Model.BojaId == 0 ? "Dodaj" : "Uredi") + " boju";
}

<h2>@ViewData["Title"]</h2>


<form action="/Admin/Boja/Snimi" method="post">
    @Html.HiddenFor(x => x.BojaId)
    <table style="width:400px">
        <tbody>
            <tr>
                <td>Naziv:</td>
                <td>@Html.TextBoxFor(x => x.Naziv, new { @class = "form-control", @style = "width: 200px;" })</td>
                <td>@Html.ValidationMessageFor(x => x.Naziv)</td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-success"  style="width: 98px;">Snimi</button>
</form>
