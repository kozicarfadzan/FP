
@model List<Dobavljac>
    @{
        ViewData["Title"] = "Prikaz dobavljaca";
    }

    <h2>@ViewData["Title"]</h2>

    <form>


        <input type="text" name="Pretraga" class="form-control col-md-3" />
        <button class="btn btn-success">Pretraga</button>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Naziv</th>
               

            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {

                <tr>
                    <td colspan="3">Nije pronađeno</td>
                </tr>
            }
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.Naziv</td>
           
            <td>
                <a href="/Admin/Dobavljac/Obrisi?Id=@item.DobavljacID" class="btn btn-danger">Obriši</a> |
                <a href="/Admin/Dobavljac/Uredi?Id=@item.DobavljacID" class="btn btn-warning">Uredi</a>
            </td>
        </tr>

            }
        </tbody>
    </table>

    <a href="/Admin/Dobavljac/Dodaj" class="btn btn-primary">Dodaj</a>


