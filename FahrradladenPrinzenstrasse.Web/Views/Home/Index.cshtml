<div class="container">

    <div class="page-section block-reinsurance wow fadeInUp">
        <div class="row">
            <div class="col-md-3 col-sm-3 col-xs-6 reinsurance-item">
                <div class="text-center reinsurance-image-container">
                    <span class="reinsurance-icon">
                        <span data-icon="&#xe021;"></span>
                    </span>
                </div><!-- /.text-center -->
                <p class="reinsurance-text">
                    <span class="first">Iznajmljivanje &</span> <span class="second">Kupovina</span>
                </p><!-- /.reinsurance-text -->
            </div><!-- /.col -->

            <div class="col-md-3 col-sm-3 col-xs-6 reinsurance-item">
                <div class="text-center reinsurance-image-container">
                    <span class="reinsurance-icon">
                        <span data-icon="&#xe035;"></span>
                    </span>
                </div><!-- /.text-center -->
                <p class="reinsurance-text">
                    <span class="first">Održavanje &</span> <span class="second">Popravak</span>
                </p><!-- /.reinsurance-text -->
            </div><!-- /.col -->

            <div class="col-md-3 col-sm-3 col-xs-6 reinsurance-item">
                <div class="text-center reinsurance-image-container">
                    <span class="reinsurance-icon">
                        <span data-icon="&#xe105;"></span>
                    </span>
                </div><!-- /.text-center -->
                <p class="reinsurance-text">
                    <span class="first">Praktičnost &</span> <span class="second">Jednostavnost</span>
                </p><!-- /.reinsurance-text -->
            </div><!-- /.col -->

            <div class="col-md-3 col-sm-3 col-xs-6 reinsurance-item">
                <div class="text-center reinsurance-image-container">
                    <span class="reinsurance-icon">
                        <span data-icon="&#xe028;"></span>
                    </span>
                </div><!-- /.text-center -->
                <p class="reinsurance-text">
                    <span class="first">Podrška</span> <span class="second">Vama</span>
                </p><!-- /.reinsurance-text -->
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.block reinsurance -->

    <div class="page-section wow fadeInUp">
        <div class="row">
            <div class="col-md-3">
                <div class="section-info">
                    <h3 class="section-title text-md-center">Popularni proizvodi</h3>
                    <p class="section-subtitle text-md-center">Vi ste birali:</p>
                    <div class="controls clearfix hidden-xs hidden-sm">
                        <a href="#" data-target="#popular-items-carousel" class="btn btn-primary pull-left owl-prev"><span data-icon="&#x23;"></span></a>
                        <a href="#" data-target="#popular-items-carousel" class="btn btn-primary pull-right owl-next"><span data-icon="&#x24;"></span></a>
                    </div><!-- /.controls -->
                </div><!-- /.section-info -->
            </div><!-- /.col-md-3 -->

            <div class="col-md-9">
                <div class="row">
                    <div class="col-xs-2 col-sm-2 hidden-md hidden-lg no-padding">
                        <div class="controls text-right">
                            <a href="#" data-target="#popular-items-carousel" class="btn btn-primary owl-prev"><span data-icon="&#x23;"></span></a>
                        </div><!-- /.controls -->
                    </div><!-- /.col -->
                    @if (Model.PopularniProizvodi.Count == 0)
                    {

                        <div>
                            Nije pronađeno
                        </div>
                    }
                    else
                    {
                        <div class="col-xs-8 col-sm-8 col-md-12 col-lg-12">
                            <div id="popular-items-carousel" class="grid-view home-owl-carousel">

                                @foreach (var item in Model.PopularniProizvodi)
                                {

                                    <div class="product-item-column">
                                        <div class="product-item-grid-view">
                                            <div class="product-item">
                                                <div class="product-image">
                                                    <a href="@item.Link">
                                                        @if (item.Slika == null || item.Slika.Length < 1000)
                                                        {
                                                            <img src="~/assets/images/default_FP.png" width="262" height="202" alt="@item.Naziv" class="center-block img-responsive">
                                                        }
                                                        else
                                                        {
                                                            <img src="data:image/png;base64,@Convert.ToBase64String(item.Slika)" width="262" height="202" alt="@item.Naziv" class="center-block img-responsive">
                                                        }

                                                    </a>
                                                </div><!-- /.product-image -->
                                                <div class="product-detail text-md-center">
                                                    <h3 class="product-name"><a href="@item.Link">@item.Naziv</a></h3>
                                                    <p class="product-price"><span class="price">@item.Cijena.ToString("0.00") KM</span></p>
                                                </div><!-- /.product-detail -->
                                            </div><!-- /.product-item -->
                                        </div><!-- /.product-item-grid-view -->
                                    </div><!-- /.product-item-column -->
                                }

                            </div><!-- /#popular-items-carousel -->
                        </div><!-- /.col -->
                    }
                    <div class="col-xs-2 col-sm-2 hidden-md hidden-lg no-padding">
                        <div class="controls text-left">
                            <a href="#" data-target="#popular-items-carousel" class="btn btn-primary owl-next"><span data-icon="&#x24;"></span></a>
                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.col-md-9 -->
        </div><!-- /.row -->
    </div><!-- /.popular section -->



    <div class="row">
        <div class="col-md-4 wow fadeInUp">
            <div class="page-section testimonials-section">
                <h3 class="section-title text-md-center">Više o nama</h3>
                <ul class="list-unstyled list-testimonials">
                    <li>
                        <blockquote>
                            Kada nam svoj bicikl dovedete na servis, po potrebi ćete dobiti besplatni rezervni kotač.
                            Prilagodit ćemo vaš bicikl za vas.
                        </blockquote>
                       
                    </li>
                    <li>
                        <blockquote>Kod nas dobivate stručni savjet</blockquote>
                       
                    </li>
                    <li>
                        <blockquote>Nudimo široku paletu rezervnih dijelova i pribora.</blockquote>
                        
                    </li>
                </ul><!-- /.list-testimonials -->
            </div><!-- /.page-section -->
        </div><!-- /.testimonials -->

        <div class="col-md-8 wow fadeInUp">
            <div class="page-section videos-section">
                <div class="section-header">

                    <h3 class="section-title text-md-center">Dobrobiti vožnje bicikla </h3>
                </div><!-- /.section-header-->
               
                <iframe width="560" height="315" src="https://www.youtube.com/embed/zu6tZy1EZoc" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <p>"I don’t ride a bike to add days to my life. I ride a bike to add life to my days"</p>
            </div><!-- /.page-section-->
        </div><!-- /.video section -->
    </div>
</div><!-- /.container -->