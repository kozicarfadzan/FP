                                                    @if (notification.Tip == TipNotifikacije.Istekao_Termin)
                                                    {

                                                        <a class="content" asp-controller="Iznajmljivanje" asp-action="Detalji" asp-route-id="@notification.RezervacijaIznajmljenaBiciklaId">
