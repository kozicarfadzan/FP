                                                                <p class="item-info">
                                                                    @if (BrojBicikala > 0)
                                                                    {
                                                                        <span>Bicikli: @BrojBicikala</span>
                                                                    }
                                                                    @if (BrojDijelova > 0)
                                                                    {
                                                                        @if (BrojBicikala > 0)
                                                                        {
                                                                            <span>,</span>
                                                                        }
                                                                        <span>Dijelovi: @BrojDijelova</span>
                                                                    }
                                                                    @if (BrojOpreme > 0)
                                                                    {
                                                                        @if (BrojBicikala > 0 || BrojDijelova > 0)
                                                                        {
                                                                            <span>,</span>
                                                                        }
                                                                        <span>Oprema: @BrojOpreme</span>
                                                                    }
                                                                    - @notification.Rezervacija.ImePrezime
                                                                </p>
                                                            </div>
                                                        </a>
                                                    }
                                                    else if (notification.Tip == TipNotifikacije.Novi_Termin)
                                                    {
                                                        <a class="content" asp-controller="Iznajmljivanje" asp-action="Detalji" asp-route-id="@notification.Rezervacija.RezervacijaIznajmljenaBicikla[0].RezervacijaIznajmljenaBiciklaID">
