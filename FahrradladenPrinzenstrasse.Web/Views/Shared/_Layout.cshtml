                                                        int BrojBicikala = notification.Rezervacija.RezervacijaProdajaBicikla.Count();
                                                        int BrojDijelova = notification.Rezervacija.RezervacijaProdajaDio.Count();
                                                        int BrojOpreme = notification.Rezervacija.RezervacijaProdajaOprema.Count();

                                                        <a class="content" asp-controller="Narudzbe" asp-action="Detalji" asp-route-id="@notification.RezervacijaId">
